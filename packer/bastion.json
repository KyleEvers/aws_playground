{
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "debian-stretch-hvm-x86_64-gp2-*",
                "root-device-type": "ebs"
            },
            "owners": [
                "563873274798"
            ],
            "most_recent": true
        },
        "instance_type": "t3.micro",
        "ssh_username": "admin",
        "ami_name": "playground-bastion-hvm-{{timestamp}}-x86_64-ebs",
        "ami_regions": [
            "us-east-1",
            "us-west-1",
            "us-west-2"
        ],

        "tags": {
            "Team": "NCATS Playground - Development",
            "Application": "Kali Playground",
            "OS_Version": "Kali",
            "Release": "Latest",
            "Base_AMI_Name": "{{ .SourceAMIName }}"
        }
    }],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "packer/ansible/playbook.yml",
            "groups": [
                "bastion"
            ]
        }
    ]
}
